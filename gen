#!/bin/bash

#!/bin/bash

touchpy() {
    printf "def main():\n\t\n\nif __name__ == '__main__':\n\tmain()" >> "$1"
    ${EDITOR:-vi} +2 "$1"
}

touchpl() {
    chmod u+x "$1"
    printf "#!/usr/bin/perl\n\nuse strict;\nuse warnings;\n\n" >> "$1"
    ${EDITOR:-vi} +5 "$1"
}

touchc() {
    printf "#include <stdio.h>\n\nint main()\n{\n\n\t\n\n}" >> "$1"
    ${EDITOR:-vi} +6 "$1"
}

generic() {
    chmod u+x "$1"
    printf "#!/usr/bin/%s\n\n" "$script" >> "$1"
    ${EDITOR:-vi} +2 "$1"
}

unknown() {
    ${EDITOR:-vi} "$1"
}

check_ext() {
    file=$(echo "$1" | awk -F. '{print $1}')
    ext=$(echo "$1" | awk -F. '{print $2}')
    if [[ "$ext" ]]; then
        case "$ext" in
            sh|bash )   script="bash"; generic "$1"     ;;
            ksh )       script="ksh"; generic "$1"      ;;
            awk )       script="awk"; generic "$1"      ;;
            pl )        touchpl "$1"                    ;;
            py )        touchpy "$1"                    ;;
            c )         touchc "$1"                     ;;
            * )         unknown "$1"                    ;;
        esac
    else
        unknown "$1"
    fi
}

main() {
    if [[ "$#" -eq 1 ]]; then
        new="$1"
        if [[ -f "$1" ]]; then
            echo "Filename already exists."
        else
            touch "$new"
            check_ext "$new"
        fi
    else
        printf "Please specify filename and extension. (Example: 'gen example.txt')\n"
    fi
}

main "$@"
