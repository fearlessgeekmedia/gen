touchpy() {
cat << EOF
def main():

if __name__ == '__main__':
    main()
EOF
}

touchpl() {
cat << EOF
#!/usr/bin/perl

use strict;
use warnings;

EOF
}

touchc() {
cat << EOF
#include <stdio.h>

int main()
{

   return 0;
}
EOF
}

touchsh() {
cat << EOF
#!/bin/${ext}

EOF
}

check_ext() {
    case "$1" in
        *.py ) touchpy >> "$1"; ${EDITOR:-vi} +2 "$1" ;;
        *.pl ) chmod u+x "$1"; touchpl >> "$1"; ${EDITOR:-vi} +5 "$1" ;;
        *.c ) touchc >> "$1"; ${EDITOR:-vi} +5 "$1" ;;
        *.sh|*.bash ) chmod u+x "$1"; ext="bash"; touchsh >> "$1"; ${EDITOR:-vi} +2 "$1" ;;
        *.ksh ) chmod u+x "$1"; ext="ksh"; touchsh >> "$1"; ${EDITOR:-vi} +2 "$1" ;;
        *.csh ) chmod u+x "$1"; ext="csh"; touchsh >> "$1"; ${EDITOR:-vi} +2 "$1" ;;
        *.awk ) chmod u+x "$1"; ext="awk"; touchsh >> "$1"; ${EDITOR:-vi} +2 "$1" ;;
        * ) ${EDITOR:-vi} "$1" ;;
    esac
}

usage() {
cat << EOF
Please specify filename and extension. (Example: 'gen example.txt')
EOF
exit
}

get_args() {
while getopts e:h OPTION; do
    case $OPTION in
        e) EDITOR=$OPTARG ;;
        h) usage ;;
        ?) usage ;;
    esac
done
}

exists() {
    if [[ -e "$1" ]]; then
        echo "Filename already exists."
        exit
    else
        touch "$1"
    fi
}

main() {
    if [[ "$#" -gt 2 ]]; then
        get_args "$@"
        exists "$3"
        check_ext "$3"
    elif [[ "$#" -eq 1 ]]; then
        get_args "$1"
        exists "$1"
        check_ext "$1"
    else
        usage
    fi
}

main "$@"
